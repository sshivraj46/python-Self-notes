#strName.isdecimal()
print("1244 : ","1244".isdecimal()) #True
print("१२३४ : ","१२३४".isdecimal()) #True
print("٢٣٤ : ","٢٣٤".isdecimal()) #True
print("٢٣٤ : ","٢٣٤".isdecimal()) #True

print("2.4 ","2.4".isdecimal()) #False
print("2^4 ","2^4".isdecimal()) #False
print("2/4 ","2/4".isdecimal()) #False
print("2%4 ","2%4".isdecimal()) #False
